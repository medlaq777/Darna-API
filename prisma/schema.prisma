generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String
  password     String?
  name         String?
  role         String   @default("user")
  isVerified   Boolean  @default(false)
  twoFaEnabled Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([email])
}

model Otp {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  usersId   String?  @db.ObjectId
  code      String
  type      String
  expiresAt DateTime
  used      Boolean  @default(false)
}

type Address {
  street  String?
  city    String?
  postal  String?
  country String?
  lat     Float?
  lng     Float?
}

model Media {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  url        String
  thumbnail  String?
  mimeType   String
  size       Int?
  uploadedAt DateTime @default(now())
  ownerId    String   @db.ObjectId
  propertyId String?  @db.ObjectId

  @@index([propertyId])
}

model Property {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  ownerId       String    @db.ObjectId
  title         String
  description   String?
  transaction   String
  price         Float?
  pricePerDay   Float?
  availableFrom DateTime?
  availableTo   DateTime?
  address       Address?
  surface       Float?
  rooms         Int?
  bedrooms      Int?
  bathrooms     Int?
  amenities     String[]
  rules         String?
  energyRating  String?
  status        String    @default("DRAFT")
  slug          String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([ownerId])
  @@index([slug])
}
